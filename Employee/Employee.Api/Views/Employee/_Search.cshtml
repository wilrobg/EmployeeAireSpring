@using Employee.Web.ViewModels.Employee;
@model SearchEmployeeViewModel;

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchEmployee" method="get">
            <div class="form-group">
                <label asp-for="EmployeeFirstName" class="control-label"></label>
                <input asp-for="EmployeeFirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EmployeeLastName" class="control-label"></label>
                <input asp-for="EmployeeLastName" class="form-control" />
            </div>
            <input type="submit" value="Search" class="btn btn-primary" />
        </form>
    </div>
</div>
<br />